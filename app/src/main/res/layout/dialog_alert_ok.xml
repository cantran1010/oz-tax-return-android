<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/alert_dialog_width"
    android:layout_height="wrap_content"
    android:background="@drawable/alert_dialog_bg"
    android:orientation="vertical">

    <au.mccann.oztaxreturn.view.TextViewCustom
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:minHeight="40dp"
        android:text="@string/app_name_old"
        android:textColor="@color/sumitted"
        android:textSize="@dimen/tv_size_xlager"
        android:textStyle="bold" />

    <au.mccann.oztaxreturn.view.TextViewCustom
        android:id="@+id/tv_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:gravity="center"
        android:text="@string/connect_hint"
        android:textColor="@color/sumitted"
        android:textSize="@dimen/size_nomal" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="10dp"
        android:background="@color/border_gray" />

    <au.mccann.oztaxreturn.view.TextViewCustom
        android:id="@+id/tv_yes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:minHeight="35dp"
        android:text="@string/alert_dialog_yes"
        android:textColor="@color/app_bg"
        android:textStyle="bold" />
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="20dp"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:layout_marginTop="30dp"
    android:background="#88000000"
    tools:ignore="Overdraw">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/alert_dialog_bg"
        android:orientation="vertical">

        <au.mccann.oztaxreturn.view.TextViewCustom
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="@string/etps_code"
            android:textColor="@color/app_bg"
            android:textSize="20sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:background="@color/app_bg" />

        <au.mccann.oztaxreturn.view.RadioButtonCustom
            android:id="@+id/rb_r"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:button="@drawable/radio_button_background"
            android:gravity="center_vertical"
            android:minHeight="75dp"
            android:paddingLeft="10dp"
            android:paddingStart="10dp"
            android:text="@string/radio_payment_r"
            android:textColor="@color/income_conten"
            tools:ignore="RtlSymmetry" />

        <au.mccann.oztaxreturn.view.RadioButtonCustom
            android:id="@+id/rb_s"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:button="@drawable/radio_button_background"
            android:gravity="center_vertical"
            android:minHeight="75dp"
            android:paddingLeft="10dp"
            android:paddingStart="10dp"
            android:text="@string/radio_payment_s"
            android:textColor="@color/income_conten"
            tools:ignore="RtlSymmetry" />

        <au.mccann.oztaxreturn.view.RadioButtonCustom
            android:id="@+id/rb_o"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:button="@drawable/radio_button_background"
            android:gravity="center_vertical"
            android:minHeight="75dp"
            android:paddingLeft="10dp"
            android:paddingStart="10dp"
            android:text="@string/radio_payment_o"
            android:textColor="@color/income_conten"
            tools:ignore="RtlSymmetry" />

        <au.mccann.oztaxreturn.view.RadioButtonCustom
            android:id="@+id/rb_p"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:button="@drawable/radio_button_background"
            android:gravity="center_vertical"
            android:minHeight="75dp"
            android:paddingLeft="10dp"
            android:paddingStart="10dp"
            android:text="@string/radio_payment_p"
            android:textColor="@color/income_conten"
            tools:ignore="RtlSymmetry" />

        <au.mccann.oztaxreturn.view.RadioButtonCustom
            android:id="@+id/rb_d"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:button="@drawable/radio_button_background"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:paddingStart="10dp"
            android:text="@string/radio_payment_d"
            android:textColor="@color/income_conten"
            tools:ignore="RtlSymmetry" />

        <au.mccann.oztaxreturn.view.RadioButtonCustom
            android:id="@+id/rb_n"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:button="@drawable/radio_button_background"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:paddingStart="10dp"
            android:text="@string/radio_payment_n"
            android:textColor="@color/income_conten"
            tools:ignore="RtlSymmetry" />

        <au.mccann.oztaxreturn.view.RadioButtonCustom
            android:id="@+id/rb_m"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:button="@drawable/radio_button_background"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:paddingStart="10dp"
            android:text="@string/radio_payment_m"
            android:textColor="@color/income_conten"
            tools:ignore="RtlSymmetry" />

    </LinearLayout>

</ScrollView>
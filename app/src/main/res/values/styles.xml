<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimaryDark">@color/app_bg</item>
        <item name="colorPrimary">@color/app_bg</item>
        <item name="colorAccent">@color/app_bg</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:textColorPrimaryInverse">@color/app_bg</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="DialogSlideAnimFullScreenAnimDownUp" parent="@android:style/Theme.Dialog">
        <item name="android:windowAnimationStyle">@style/DialogAnimationDownUp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <!-- No backgrounds, titles or window float -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">false</item>
        <!-- Just to prove it's working -->
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="DialogSlideAnimFullScreenFadeInOut" parent="@android:style/Theme.Dialog">
        <item name="android:windowAnimationStyle">@style/DialogAnimationFadeInOut</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <!-- No backgrounds, titles or window float -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">false</item>
        <!-- Just to prove it's working -->
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="DialogAnimationDownUp">
        <item name="android:windowEnterAnimation">@anim/from_down_to_up</item>
        <item name="android:windowExitAnimation">@anim/from_up_to_down</item>
    </style>

    <style name="DialogAnimationFadeInOut">
        <item name="android:windowEnterAnimation">@anim/fadein</item>
        <item name="android:windowExitAnimation">@anim/fadeout</item>
    </style>
</resources>
